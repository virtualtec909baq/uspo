<%= stylesheet_link_tag 'landing/style.css'%>
<style type="text/css">
	header{
		background: url('<%= Settin.find_by_key("image").image.url%>') !important;
	}
	.payoff{
		background:  url('<%= Settin.find_by_key("image_2").image.url%>')  no-repeat !important;
	}
</style>
<!-- HEADER
	================================================== -->	  
	<header>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<br>
					<img class="img-responsive img-center" src="/assets/logo1.png">
					<br>
					<br>
					<p class="lead">
						<%= simple_format Settin.find_by_key("slogan").value%>
					</p>

					<div class="carousel-iphone">
						<div id="carousel-example-generic" class="carousel slide">

							<!-- Indicators -->
							<ol class="carousel-indicators">
								<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
								<li data-target="#carousel-example-generic" data-slide-to="1"></li>
								<li data-target="#carousel-example-generic" data-slide-to="2"></li>
							</ol>

							<!-- Wrapper for slides -->
							<div class="carousel-inner">
								<div class="item active">
									<img src='<%= Settin.find_by_key("image").image.url%>'>
								</div>
								<div class="item">
									<img src='<%= Settin.find_by_key("image").image.url%>'>
								</div>
								<div class="item">
									<img src='<%= Settin.find_by_key("image").image.url%>'>	
								</div>

							</div>
						</div>
					</div>
				</div>	  
			</div>    
		</div>
	</header>


<!-- PURCHASE
	================================================== -->
	<section class="purchase">
		<h1><%= simple_format Settin.find_by_key("title3").value%></h1>
		<p class="lead"><%= simple_format Settin.find_by_key("title2").value%></p>
	</section>


<!-- PAYOFF 
	================================================== -->
	<section class="payoff">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3><%= simple_format Settin.find_by_key("paragraph").value%></h3>
				</div>
			</div>
		</div>	  
	</section>


<!-- DETAILS 
	================================================== -->
	<section class="detail">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div id="carousel-example-generic-2" class="carousel slide">

						<!-- Wrapper for slides -->
						<div class="carousel-inner">
							<div class="item active">
								<div class="row">
									<div class="col-sm-12 col-md-offset-1 col-md-6">
										<h1><%= simple_format Settin.find_by_key("title4").value%></h1>
										<p><%= simple_format Settin.find_by_key("title5").value%></p>
									</div>
									<div class="col-sm-12 col-md-5">
										<div class="app-screenshot">
											<img src='<%= Settin.find_by_key("image").image.url%>'>
										</div>
									</div>
								</div>
							</div>
							<div class="item">
								<div class="row">
									<div class="col-sm-12 col-md-offset-1 col-md-6">
										<h1><%= simple_format Settin.find_by_key("title7").value%></h1>
										<p><%= simple_format Settin.find_by_key("title8").value%></p>
									</div>
									<div class="col-sm-12 col-md-5">
										<div class="app-screenshot">
											<img src='<%= Settin.find_by_key("image").image.url%>'>
										</div>
									</div>
								</div>
							</div>
							<div class="item">
								<div class="row">
									<div class="col-sm-12 col-md-offset-1 col-md-6">
										<h1><%= simple_format Settin.find_by_key("title9").value%></h1>
										<p><%= simple_format Settin.find_by_key("title10").value%></p>
									</div>
									<div class="col-sm-12 col-md-5">
										<div class="app-screenshot">
											<img src='<%= Settin.find_by_key("image").image.url%>'>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Indicators -->
						<ol class="carousel-indicators">
							<li data-target="#carousel-example-generic-2" data-slide-to="0" class="active"></li>
							<li data-target="#carousel-example-generic-2" data-slide-to="1"></li>
							<li data-target="#carousel-example-generic-2" data-slide-to="2"></li>
						</ol>		
					</div>
				</div>
			</div>
		</div>
	</section>


<!-- FEATURES
	================================================== -->
	<section class="features">
		<div class="container">
			<div class="row">

				<div class="col-md-4">
					<div class="circle"><i class="icon-bookmark"></i></div>
					<h2><%=simple_format Settin.find_by_key("title11").value%></h2>
					<p><%= simple_format Settin.find_by_key("title12").value%></p>
				</div>

				<div class="col-md-4">
					<div class="circle"><i class="icon-keypad"></i></div>
					<h2><%= simple_format Settin.find_by_key("title13").value%></h2>
					<p><%= simple_format Settin.find_by_key("title14").value%></p>
				</div>

				<div class="col-md-4">
					<div class="circle"><i class="icon-keypad"></i></div>
					<h2><%= simple_format  Settin.find_by_key("title15").value%></h2>
					<p><%= simple_format Settin.find_by_key("title16").value%></p>
				</div>

			</div>
		</div>
	</section>


<!-- SOCIAL
	================================================== -->
	<section class="social">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2>Connect with us</h2>
					<form>
						<div class="col-md-6">
							<label for="exampleInputEmail1">Email</label>
							<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
						</div>
						<div class="col-md-6">
							<label for="exampleInputPassword1">Name</label>
							<input type="password" class="form-control" id="exampleInputPassword1" placeholder="name">
						</div>
						<div class="col-md-6">
							<label for="exampleInputPassword1">Mensaje</label>
							<textarea class="form-control" rows="3"></textarea>
						</div>
						<div class="col-md-12">
							<br>
							<button type="submit" class="btn btn-default btn-info btn-block">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>	  
	</section>


<!-- GET IT 
	================================================== -->
	<section class="get-it">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Avaialable now on the App Store</h1>
					<p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>
				</div>
				<div class="col-md-6">
					<img src="/assets/io.png" class="store-img img-responsive ">
				</div>
				<div class="col-md-6">
					<img src="/assets/google.png" class="store-img img-responsive ">
				</div>
			</div>
		</div>
	</section>
	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-md-3"><a href="<%= privacy_path%>">PRIVACY POLITY</a></div>
				<div class="col-md-3"><a href="<%= terms_path%>">TERMS</a></div>
				<div class="col-md-3"><a href="<%= service_support_path%>">SERVICES SUPPORTS</a></div>
				<div class="col-md-3"><a target="_blank" href="http://virtual-tec.com/lang/"> VIRTUAL-TEC</a></div>
			</div>
		</div>
	</footer>
 
    

<!-- JAVASCRIPT
	================================================== -->
	<script src="/assets/landing/animatescroll.js"></script>
	<script src="/assets/landing/scripts.js"></script>
	<script src="/assets/landing/retina.min.js"></script>
